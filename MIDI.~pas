unit MIDI;

interface
uses
  Windows, Messages, SysUtils, Classes, Graphics, Controls, Forms, Dialogs,
  StdCtrls, ExtCtrls, Menus, QCCom32,Spin, MMSystem,ausgabe;

Procedure Taste_zuweisen;
implementation
uses lasersoftware;


Procedure Taste_zuweisen;
Begin
//Var Neuerton ist die gefrückte Taste

// Nur die Weissen belegen
// neuerton:=db1-36;
case neuerton of
 36:neuerton:=0;
 38:neuerton:=1;
 40:neuerton:=2;
 41:neuerton:=3;
 43:neuerton:=4;
 45:neuerton:=5;
 47:neuerton:=6;
 48:neuerton:=7;
 50:neuerton:=8;
 52:neuerton:=9;
 53:neuerton:=10;
 55:neuerton:=11;
 57:neuerton:=12;
 59:neuerton:=13;
 60:neuerton:=14;
 62:neuerton:=15;
 64:neuerton:=16;
 65:neuerton:=17;
 67:neuerton:=18;
 69:neuerton:=19;
 71:neuerton:=20;
 72:neuerton:=21;
 74:neuerton:=22;
 76:neuerton:=23;
 77:neuerton:=24;
 79:neuerton:=25;
 81:neuerton:=26;
 83:neuerton:=27;
 84:neuerton:=28;
 86:neuerton:=29;
 88:neuerton:=30;
 89:neuerton:=31;
 91:neuerton:=32;
 93:neuerton:=33;
 95:neuerton:=34;
 96:neuerton:=35;

end;


End;








end.
